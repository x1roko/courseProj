<Window x:Class="BrosShop.Windows.AuthorizateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrosShop.Windows"
        mc:Ignorable="d"
        Title="AuthorizateWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/DarkTheme.xaml"/>
                <ResourceDictionary Source="../Styles/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Login:"/>
        <TextBox x:Name="loginTextBox"/>
        <TextBlock Text="Password:"/>
        <TextBox x:Name="passwordTextBox"/>
        <Button x:Name="authorizeButton" Content="Авторизоваться" Click="AuthorizeButton_Click"/>
    </StackPanel>
</Window>
